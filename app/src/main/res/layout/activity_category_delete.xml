<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_delete_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".CategoryDeleteActivity">

    <!-- 1) 상단 앱 이름 ("SwiPic") -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="SwiPic"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2) 화면 제목 ("분류별로 삭제") -->
    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="분류별로 삭제"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/app_name"
        app:layout_constraintTop_toBottomOf="@id/app_name" />

    <!-- 3) 휴지통 버튼 (상단바 오른쪽) -->
    <ImageButton
        android:id="@+id/btn_trash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="휴지통"
        android:scaleType="centerInside"
        android:src="@drawable/ic_trash"
        app:layout_constraintEnd_toStartOf="@id/btn_home"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 4) 홈 버튼 (상단 우측) -->
    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="69dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="홈"
        android:scaleType="centerInside"
        android:src="@drawable/ic_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 5) 필터 버튼 영역: 분류별로 삭제, 동일한 사진 삭제 (AI), etc -->
    <LinearLayout
        android:id="@+id/filter_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_title">

        <!-- 분류별로 삭제 (선택 상태 / 파란색) -->
        <Button
            android:id="@+id/btn_category_delete"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/blue_selected"
            android:text="분류별로 삭제"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- 동일한 사진 삭제 (AI) -->
        <Button
            android:id="@+id/btn_ai_delete"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/main_color"
            android:text="동일한 사진 삭제 (AI)"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- etc -->
        <Button
            android:id="@+id/btn_etc"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/main_color"
            android:text="etc"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 6) 카테고리 그리드: 풍경, 사람, 동물, 음식, 기타 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/category_grid_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_buttons">

        <!-- 첫 번째 행: 풍경 -->
        <LinearLayout
            android:id="@+id/category_landscape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45">

            <ImageView
                android:id="@+id/img_landscape"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_corners_image"
                android:scaleType="centerCrop"
                android:src="@drawable/img_landscape"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="풍경"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 첫 번째 행: 사람 -->
        <LinearLayout
            android:id="@+id/category_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45">

            <ImageView
                android:id="@+id/img_person"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_corners_image"
                android:scaleType="centerCrop"
                android:src="@drawable/img_person"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="사람"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 두 번째 행: 동물 -->
        <LinearLayout
            android:id="@+id/category_animal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_landscape"
            app:layout_constraintWidth_percent="0.45">

            <ImageView
                android:id="@+id/img_animal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_corners_image"
                android:scaleType="centerCrop"
                android:src="@drawable/img_animal"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="동물"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 두 번째 행: 음식 -->
        <LinearLayout
            android:id="@+id/category_food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_person"
            app:layout_constraintWidth_percent="0.45">

            <ImageView
                android:id="@+id/img_food"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_corners_image"
                android:scaleType="centerCrop"
                android:src="@drawable/img_food"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="음식"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 세 번째 행: 기타 (가운데 정렬) -->
        <LinearLayout
            android:id="@+id/category_etc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_animal"
            app:layout_constraintWidth_percent="0.45">

            <ImageView
                android:id="@+id/img_etc"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_corners_image"
                android:scaleType="centerCrop"
                android:src="@drawable/img_etc"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="기타"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
