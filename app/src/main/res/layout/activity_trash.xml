<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8FEE8">  <!-- 연한 연두 배경색 -->

    <!--
        CardView: 둥근 모서리 흰색 패널
        └─ 이 안에 상단 바, 버튼, 사진 그리드를 배치
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_trash_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--
            CardView 내부 레이아웃: 세로로 쌓이는 구조
            1) 상단 바(타이틀+아이콘)
            2) 휴지통 비우기 버튼
            3) 사진 그리드(RecyclerView)
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- 1) 상단 바: 좌측에 타이틀/부제목, 우측에 뒤로가기·홈 아이콘 -->
            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <!-- 1-1) 타이틀+부제목 영역 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_trash_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SwiPic"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_trash_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴지통"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- 1-2) 뒤로가기 아이콘 -->
                <!-- ic_arrow_back.xml 혹은 png 를 res/drawable 에 준비해 주세요 -->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="뒤로가기"
                    android:tint="#000000"
                    android:layout_marginEnd="8dp" />

                <!-- 1-3) 홈 아이콘 -->
                <!-- ic_home.xml 혹은 png 를 res/drawable 에 준비해 주세요 -->
                <ImageButton
                    android:id="@+id/btn_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_home"
                    android:contentDescription="홈으로 이동"
                    android:tint="#000000" />
            </LinearLayout>

            <!-- 2) 휴지통 비우기 버튼 -->
            <Button
                android:id="@+id/btn_empty_trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴지통 비우기"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3EDB95"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- 3) 사진 그리드: RecyclerView (GridLayoutManager 로 매니저 설정) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_trash_images"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:clipToPadding="false"
                android:scrollbars="vertical" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
